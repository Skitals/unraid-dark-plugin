        && /^([0-9A-F]{3}){1,2}$/i.test(greentext.value)
        && /^([0-9A-F]{3}){1,2}$/i.test(greenorb.value)
        && /^([0-9A-F]{3}){1,2}$/i.test(blueorb.value)
        && /^([0-9A-F]{3}){1,2}$/i.test(orangetext.value)) {
